#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
QT_DIR="/opt/Qt5.3.0"

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "-----> Downloading and installing Qt 5.3.0"
qt_url="https://s3-eu-west-1.amazonaws.com/qtc-runtime-buildpacks/binaries/qt-5.3.0-linux-x64.tar.gz"
# Move Qt to correct path and make binaries executable
mkdir -p $QT_DIR
curl $qt_url -s -o - | tar xzf - -C $QT_DIR
chmod +x $QT_DIR/5.3/gcc_64/bin/*
PATH=$QT_DIR/5.3/gcc_64/bin:$PATH


cd $BUILD_DIR
echo "-----> Configuring with qmake"
qmake 2>&1 | indent

# make
echo "-----> Compiling with make"
make 2>&1 | indent

# install
echo "-----> Installing with make install"
make install 2>&1 | indent

ldconfig
