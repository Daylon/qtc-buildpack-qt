#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "-----> Setting up Qt 5.3.0"
PATH=/opt/Qt5.3.0/5.3/gcc_64/bin:$PATH

cd $BUILD_DIR
echo "-----> Configuring with qmake"
qmake $QMAKE_ARGS 2>&1 | indent

# make
echo "-----> Compiling with make"
make 2>&1 | indent
