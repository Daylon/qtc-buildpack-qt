#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "-----> Downloading and installing Qt 5.3.0"
qt_url="https://s3-eu-west-1.amazonaws.com/qtc-runtime-buildpacks/binaries/qt-5.3.0-linux-x64.tar.gz"
# Move Qt to ./vendor and make them executable
mkdir -p $build_dir/vendor/qt
curl $qt_url -s -o - | tar xzf - -C $build_dir/vendor/qt
chmod +x $build_dir/vendor/qt/bin/*
PATH=$build_dir/vendor/qt/bin:$PATH


cd $BUILD_DIR
echo "-----> Configuring with qmake"
qmake 2>&1 | indent

# make
echo "-----> Compiling with make"
make 2>&1 | indent

# install
echo "-----> Installing with make install"
make install 2>&1 | indent
